<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/q"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:text="Q"
                android:padding="0dp"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/w"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                tools:ignore="SmallSp"
                android:text="W"
                android:padding="0dp" />
            <Button
                android:id="@+id/e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="E"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/r"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="R"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/t"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="T"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/y"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="Y"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/u"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="U"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/i"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="I"
                android:padding="0dp"
                tools:ignore="SmallSp"/>
            <Button
                android:id="@+id/o"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="O"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/p"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="P"
                android:padding="0dp"
                tools:ignore="SmallSp" />


        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >

            <Button
                android:id="@+id/a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="A"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="S"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="D"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/f"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="F"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/g"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="G"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="H"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/j"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="J"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/k"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="K"
                android:padding="0dp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="L"
                android:padding="0dp"
                tools:ignore="SmallSp" />


        </TableRow>



        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginHorizontal="60dp"
            >


            <Button
                android:id="@+id/z"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="Z"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/x"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="X"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="C"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/v"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="V"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="B"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/n"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="N"
                android:padding="0dp"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="10sp"
                app:backgroundTint="#AACDCA"
                android:text="M"
                android:padding="0dp"
                tools:ignore="SmallSp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/phrase"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012"
        app:srcCompat="@drawable/wisielec0" />

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restart"
        android:text="RESTART"
        app:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />
</androidx.constraintlayout.widget.ConstraintLayout>